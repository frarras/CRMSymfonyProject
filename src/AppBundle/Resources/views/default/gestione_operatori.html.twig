{% extends "AppBundle::default/layout.html.twig"%}
{% block title %}Admin - Gestione Operatori{% endblock %}

{% block sidebar %}
{% include 'AppBundle::default/includes/sidebar_admin.html.twig' %}
{% endblock %}

{% block content %}

<ul>
{% for operatore in operatori %}
    <li>{{ operatore.name }} {{ operatore.surname }}</li>
{% endfor %}
</ul>
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header text-center huge lead">Gestione Operatori</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row top-buffer">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th class="text-center">ID</th>
                                            <th class="text-center">Nome</th>
                                            <th class="text-center">Cognome</th>
                                            <th class="text-center">Email</th>
                                            <th class="text-center">Telefono</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for operatore in operatori %}
                                        <tr itemscope itemtype="http://schema.org/Person">
                                            <td class="text-center">{{ operatore.id }}</td>
                                            <td itemprop="givenName" class="text-center">{{ operatore.name }}</td>
                                            <td itemprop="familyName" class="text-center">{{ operatore.surname }}</td>
                                            <td itemprop="email" class="text-center">{{ operatore.email }}</td>
                                            <td itemprop="telephone" class="text-center">{{ operatore.phone }}</td>
                                             <td class="text-center"> <a href="{{ path('modifica_operatore') }}" role="button" class="btn crm-button">Modifica</button></td>
                                            <td class="text-center"><button type="button" class="btn crm-button crm-remove-btn" data-confirm="Rimuovere l'operatore?">Rimuovi</button></td>
                                        </tr>
                                        {% endfor %}
                                        
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-6 -->
            </div>
        </div>
    {% endblock %}