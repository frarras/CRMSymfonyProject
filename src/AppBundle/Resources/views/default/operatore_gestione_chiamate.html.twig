{% extends "AppBundle::default/layout.html.twig"%}
{% block title %} Gestione chiamata {% endblock %}

{% block sidebar %}
{% include 'AppBundle::default/sidebar_operatore.html.twig' %}
{% endblock %}
{% block content %}
<div id="wrapper">
	<div id="page-wrapper">
		<div class="panel panel-default">
	        <div class="row">
	            <div class="col-lg-12"><h1 class="page-header text-center huge lead">Pannello Gestione Chiamata</h1>
	            </div>
				<div class="panel-body">
	                <div class="row">
	                    <div class="col-lg-6">
		                    <div class="panel panel-default">
		                    	<div class="panel-heading text-center  lead">Anagrafica Contatto</div>
		                        <form role="form">
		                            <div class="form-group">
		                                <label>Nome</label>
		                                <input class="form-control" value="{{ utente.name}}"disabled>
		                                <label>Cognome</label>
		                                <input class="form-control" value="{{ utente.surname}}" disabled>
		                                <label>Email</label>
		                                <input class="form-control" value="{{ utente.email}}" disabled>
		                                <label>Telefono</label>
		                                <input class="form-control" value="{{ utente.phone}}" disabled>
		                                <label>Campagna</label>
		                                <input class="form-control" value="{{ utente.campagna}}" disabled>
		                            </div>
		                        </form>
		                    </div>
	                	</div>
	                    <div class="col-lg-6">
	                    	<div class="panel panel-default">
		                    	<div class="panel-heading text-center  lead">Feedback Chiamate</div>
		                    	<label>Storico Feedback</label>
		                    	<div class="panel-heading"></div>
	                            <form role="form">
	                                <div class="form-group">

	                                  <textarea class="form-control" rows="12" disabled>
	                                  	{% for chiamata in chiamata %}
	                                	{{ chiamata.feedback }}
	                                	{% endfor %}
	                                  </textarea>
	                                </div>
	                            </form>
	                        </div>
	                    </div>
	                </div>
	            </div>
			</div>
				{{ form_start(form) }}
					<div class="panel-heading text-center  lead">Feedback Chiamate:</div>
					{{ form_widget(form.feedback) }}
					<div class="row top-buffer">
                            <div class="col-lg-12">
                            </div>
                            <!-- /.col-lg-12 -->
                    </div>
                <div class='row'>
                    <div class="col-md-3 col-md-offset-5">
                    	<h4>Seleziona quando richiamare:</h4>
                    	{{ form_widget(form.dataRichiamare) }}

                    	Seleziona status Utente:
                    	{{ form_widget(form.statusUtente,{'attr': {'class': 'btn btn-default dropdown-toggle'}} )}}
                    </div>
                </div>
                    <div class="row top-buffer bottom-buffer">


                    	<div class="col-md-3 col-md-offset-3">
							{{ form_widget(form.Salva) }}
						</div>

					 	<div class="col-md-3 col-md-offset-2">
							{{ form_widget(form.indietro) }}
						</div>
					</div>
				{{ form_end(form) }}
		</div>
	</div>
</div>
{% endblock %}
