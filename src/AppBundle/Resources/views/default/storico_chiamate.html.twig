{% extends "AppBundle::default/layout.html.twig"%}
{% block title %}Operatore storico chiamata {% endblock %}

{% block sidebar %}
{% include 'AppBundle::default/sidebar_operatore.html.twig' %}
{% endblock %}

{% block content %}
	<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header text-center huge lead">Storico Chiamate Contatto ID: {{ utente.id }}</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>

            <div class="row" itemscope itemtype="http://schema.org/Person">
                <div class="col-md-6">
                    <form>
                      <div class="form-group">
                        <label for="exampleCampagna">Campagna</label>
                        <input type="text" class="form-control" id="exampleCampagna" placeholder="Campagna" value="{{ utente.campagna }}" disabled>
                    </div>
                    <div class="form-group">
                        <label for="exampleName">Nome</label>
                        <input itemprop="givenName" type="text" class="form-control" id="exampleName" placeholder="Nome" value="{{ utente.name }}" disabled>
                    </div>
                    <div class="form-group">
                        <label for="exampleLastName">Cognome</label>
                        <input itemprop="familyName" type="text" class="form-control" id="exampleLastName" placeholder="Cognome" value="{{ utente.surname }}" disabled>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <form>
                    <div class="form-group">
                        <label for="contactID">ID Contatto</label>
                        <input type="text" class="form-control" id="contactID" placeholder="ID" value="{{ utente.id }}" disabled>
                    </div>
                    <div class="form-group">
                      <label for="exampleEmail">Email</label>
                      <input itemprop="email" type="text" class="form-control" id="exampleEmail" placeholder="Email" value="{{ utente.email }}"disabled>
                  </div>
                  <div class="form-group">
                    <label for="examplePhone">Telefono</label>
                    <input itemprop="telephone" type="text" class="form-control" id="examplePhone" placeholder="Telefono" value="{{ utente.phone }}" disabled>
                </div>
            </form>
        </div>
    </div>

    <div class="row top-buffer">
    	{% for chiamata in chiamata %}
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Effettuata il: {{ chiamata.fineChiamata|date('Y-m-d H:i:s') }}
                </div>
                <div class="panel-body">
                    <p>{{ chiamata.feedback }}</p>
                </div>
            </div>
        </div>
        {% endfor %}     
    </div>

    <div class="row">
        <div class="col-lg-offset-5 bottom-buffer">
            <button type="button" class="btn btn-primary btn-lg back-btn">Indietro</button>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{% include 'AppBundle::default/includes/scripts.html.twig' %}
<script>
    $(".back-btn").click(function() {
        window.history.back();
    });
</script>
{% endblock %}

